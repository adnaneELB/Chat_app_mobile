<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/oppo_laout"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/oppo_text"
                android:padding="20dp"
                android:background="@drawable/msg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this other msg"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppo_time"
                android:text="3-10-2023 12:17"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/sender_layout"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sender_text"
                android:padding="20dp"
                android:background="@drawable/msg_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is my msg"
                android:textColor="@color/white"
                />
            <TextView
               android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sender_time"
                android:text="3-10-2023 12:17"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>